@functions{
    bool IsCurrentMenu(params string[] names)
    {
        bool result = false;
        if (names != null && names.Length > 0)
        {
            string path = Context?.Request?.Path;
            if (path != null)
            {
                string controllerName = path.Split("/").Where(r => r != String.Empty).FirstOrDefault();
                result = names.Contains(controllerName);
            }
        }
        return result;
    }
    string AddActiveMenuClassIfCurrentMenu(params string[] names)
    {
        if (IsCurrentMenu(names))
        {
            return "m-menu__item--active";
        }
        else
        {
            return String.Empty;
        }
    }
}
