
@if (TempData["tp.notifications.Success"] != null)
{
    foreach (var message in TempData["tp.notifications.Success"] as string[])
    {

        <div class="m-alert m-alert--icon m-alert--air alert alert-success alert-dismissible fade show" role="alert" style="margin:0">
            <div class="m-alert__icon">
                <i class="la la-warning"></i>
            </div>
            <div class="m-alert__text">
                <strong>
                    Bilgi
                </strong>
                <br />
                @message
            </div>
            <div class="m-alert__close">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
}
else if (TempData["tp.notifications.Warning"] != null)
{
    foreach (var message in TempData["tp.notifications.Warning"] as string[])
    {

        <div class="m-alert m-alert--icon m-alert--air alert alert-warning alert-dismissible fade show" role="alert" style="margin:0">
            <div class="m-alert__icon">
                <i class="la la-warning"></i>
            </div>
            <div class="m-alert__text">
                <strong>
                    Uyarı
                </strong>
                <br />
                @message
            </div>
            <div class="m-alert__close">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
}
else if (TempData["tp.notifications.Error"] != null)
{
    foreach (var message in TempData["tp.notifications.Error"] as string[])
    {

        <div class="m-alert m-alert--icon m-alert--air alert alert-danger alert-dismissible fade show" role="alert" style="margin:0">
            <div class="m-alert__icon">
                <i class="la la-warning"></i>
            </div>
            <div class="m-alert__text">
                <strong>
                    Hata
                </strong>
                <br />
                @message
            </div>
            <div class="m-alert__close">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
}

