@using TP.Core
@model List<TP.Data.Entities.PageModels.TritModel.TritOthersListModel>
@*@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}*@


<div class="m-portlet__body">
    <div class="m-widget3">
        @foreach (var trit in Model)
        {
            <div class="m-widget3__item">
                <div class="m-widget3__header">
                    <div class="m-widget3__user-img">
                        <img class="m-widget3__img" src="~/Content/assets/app/media/img/users/user1.jpg" alt="">
                    </div>
                    <div class="m-widget3__info">
                        <span class="m-widget3__username">
                            @trit.username
                        </span>
                        <br>
                        <span class="m-widget3__time">
                            @trit.trit_time.ToString("dd.MM.yyyy HH:mm")
                        </span>
                    </div>


                    <div class="m-demo-icon__preview">
                        <i class="flaticon-rocket"></i>
                    </div>

                    <div class="m-demo-icon__preview">
                        <i class="la la-heart-o"></i>
                    </div>
                </div>
                <div class="m-widget3__body">
                    <p class="m-widget3__text">
                        @trit.trit_text
                    </p>
                </div>
            </div>
        }
    </div>
</div>
                        


    <script src="~/Content/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/Content/assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
    <!--end::Base Scripts -->
    <!--begin::Page Vendors -->
    <script src="~/Content/assets/vendors/custom/fullcalendar/fullcalendar.bundle.js" type="text/javascript"></script>
    <!--end::Page Vendors -->
    <!--begin::Page Snippets -->
    <script src="~/Content/assets/app/js/dashboard.js" type="text/javascript"></script>
    <!--end::Page Snippets -->
